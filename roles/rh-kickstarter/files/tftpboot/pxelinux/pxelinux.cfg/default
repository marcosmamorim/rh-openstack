# PXE boot options
prompt 0
default vesamenu.c32
menu title Rebuild and diagnosis options
timeout 100
menu background background.png
# Launch local installation
label local
menu label Start system from local storage
localboot 0
menu separator
#

# Installation of RHEL 7.2 OpenStack Platform 7 - Compute Node
label install-rhel-osp-7.2-compute
menu label install rhel 7-2
kernel rhel-7.2/vmlinuz
append initrd=rhel-7.2/initrd.img ip=dhcp inst.repo=http://{{ internal_ipaddr }}/rhel-server-7.2/ inst.ks=http://{{ internal_ipaddr }}/ks/rhel-osp-7.2.ks

menu separator
# Local command - reboot
label reboot
menu label Reboot
com32 reboot.c32
# Local command - shutdown
label poweroff
menu label Power Off
comboot poweroff.com
