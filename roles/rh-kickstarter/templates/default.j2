# PXE boot options
prompt 0
default vesamenu.c32
menu title Rebuild and diagnosis options
timeout 100
menu background background.png
# Launch local installation
label local
menu label Start system from local storage
localboot 0
menu separator

label install-rhel-osp-7.2-controller
menu label install rhel 7-2 controller
kernel rhel-7.2/vmlinuz
append initrd=rhel-7.2/initrd.img ip=dhcp inst.repo=http://{{ repo_address }}/{{ rhel_prefix }}/ inst.ks=http://{{ repo_address }}/ks/{{rhel_prefix}}.ks  {{ kernel_boot_options }}

menu separator
label install-rhel-osp-7.2-compute
menu label install rhel 7-2 compute
kernel rhel-7.2/vmlinuz
append initrd=rhel-7.2/initrd.img ip=dhcp inst.repo=http://{{ repo_address }}/{{ rhel_prefix }}/ inst.ks=http://{{ repo_address }}/ks/{{rhel_prefix}}-compute.ks  {{ kernel_boot_options }}

menu separator
# Local command - reboot
label reboot
menu label Reboot
com32 reboot.c32
# Local command - shutdown
label poweroff
menu label Power Off
comboot poweroff.com
